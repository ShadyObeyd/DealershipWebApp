@using CarDealership.Models.ViewModels.News
@model EditNewsViewModel

<h1 class="text-center">Edit News</h1>
<hr class="hr-style" />
<form class="mx-auto col-md-6" method="post" asp-area="Administration" asp-controller="News" asp-action="Edit">
    <input class="newsId" name="newsId" id="newsId" value="@Model.Id" hidden />
    <hr class="hr-style" />
    <div class="form-group">
        <div class="text-center">
            <label asp-for="Title"></label>
        </div>
        <input asp-for="Title" type="text" class="form-control" placeholder="Title..." />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="text-center">
            <label asp-for="Content"></label>
        </div>
        <textarea style="resize: none" rows="14" asp-for="Content" class="form-control" placeholder="Content..."></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <hr class="hr-style" />
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-dark">Edit</button>
    </div>
</form>